<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eliagbenu.switchdatingapp" >

    <application
        android:name=".controller.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".views.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".views.Splash"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.Suitors"
            android:label="@string/title_activity_suitors" >
        </activity>
        <activity
            android:name=".views.Onboarding"
            android:label="@string/title_activity_onboarding" >
        </activity>
        <activity
            android:name=".views.Signup"
            android:label="@string/title_activity_signup" >
        </activity>
        <activity
            android:name=".views.Profile"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name=".views.Login"
            android:label="@string/title_activity_signin" >
        </activity>
    </application>

</manifest>
