        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:src="@drawable/flash"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop" />
</LinearLayout>
