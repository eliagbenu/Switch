<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="SwitchTheme"
        parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/SwitchActionBarTheme</item>

        <item name="background">@drawable/background</item>
        <item name="android:windowBackground">@color/color_1</item>
        <item name="android:colorBackground">@color/color_1</item>
        <item name="android:textColor">@color/color_5</item>
        <item name="android:windowActionBar">false</item>


    </style>


    <!-- ActionBar styles -->
    <style name="SwitchActionBarTheme"
        parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/color_3</item>
        <item name="android:icon">@drawable/ic_launcher</item>

        <!-- Support library compatibility -->

    </style>

    <style name="NoTheme"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:windowBackground">@color/color_1</item>
    </style>

</resources>
